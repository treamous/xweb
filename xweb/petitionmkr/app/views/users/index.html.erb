<h1>Listing users</h1>

<table>
  <tr>
    <th>First Name</th>
	<th>Last Name</th>
	<th>Username</th>
	<th>Email</th>
    <th>State</th>
    <th>Age</th>
    <th>Interest</th>
    <th>Affiliation</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
	<td><%= user.last_name %></td>
	<td><%= user.username %></td>
	<td><%= user.email %></td>
    <td><%= user.state %></td>
    <td><%= user.age %></td>
    <td><%= user.interest %></td>
    <td><%= user.affiliation %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure you want to delete?', :method => :delete %></td>
  </tr>
<% end %>
</table>

