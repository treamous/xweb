<%= form_for(@login) do |f| %>
  <% if @login.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@login.errors.count, "error") %> 
        prohibited this login from being saved:</h2>
      <ul>
      <% @login.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	
	  <fieldset>
	  <legend>Enter User Details</legend>
	
	  <div>
	    <%= f.label :name %>:
	    <%= f.text_field :name, :size => 40 %>
	  </div>
	
	  <div>
	    <%= f.label :password, 'Password' %>:
	    <%= f.password_field :password, :size => 40 %>
	  </div>
	
	  <div>
	    <%= f.submit %>
	  </div>
	
	  </fieldset>
	<% end %>
	
	</div>